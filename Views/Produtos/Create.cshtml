@model CoffeeShop.Models.Produto

@{
    ViewData["Title"] = "Novo Produto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-brown text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-box me-2"></i>Novo Produto
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Nome" class="form-control" placeholder="Nome do Produto" required />
                                    <label asp-for="Nome">
                                        <i class="fas fa-tag text-muted me-1"></i> Nome do Produto
                                    </label>
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                    <div class="valid-feedback">Perfeito!</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Preco" class="form-control" placeholder="Preço" required />
                                    <label asp-for="Preco">
                                        <i class="fas fa-dollar-sign text-muted me-1"></i> Preço
                                    </label>
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                    <div class="valid-feedback">Preço válido!</div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Descricao" class="form-control" placeholder="Descrição" required />
                                    <label asp-for="Descricao">
                                        <i class="fas fa-info-circle text-muted me-1"></i> Descrição
                                    </label>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                    <div class="valid-feedback">Descrição válida!</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="QuantidadeEstoque" class="form-control" placeholder="Quantidade em Estoque" required />
                                    <label asp-for="QuantidadeEstoque">
                                        <i class="fas fa-boxes text-muted me-1"></i> Quantidade em Estoque
                                    </label>
                                    <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                                    <div class="valid-feedback">Quantidade válida!</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId" required>
                                        <option value="">Selecione o Fornecedor</option>
                                    </select>
                                    <label asp-for="FornecedorId">
                                        <i class="fas fa-truck text-muted me-1"></i> Fornecedor
                                    </label>
                                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                                    <div class="valid-feedback">Fornecedor válido!</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Cadastrar Produto
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-brown {
        background-color: #6F4E37;
    }

    .btn-primary {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

        .btn-primary:hover {
            background-color: #5D4037;
            border-color: #5D4037;
        }

    .form-floating > label {
        padding-left: 1.75rem;
    }

    .form-check-input:checked {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

    .form-control:focus {
        border-color: #6F4E37;
        box-shadow: 0 0 0 0.25rem rgba(111, 78, 55, 0.25);
    }

    .valid-feedback, .invalid-feedback {
        opacity: 0;
        transition: opacity 0.2s ease-in-out;
    }

    .was-validated .form-control:valid ~ .valid-feedback,
    .was-validated .form-control:invalid ~ .invalid-feedback {
        opacity: 1;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <script>
        $(document).ready(function () {
            $("#Preco").mask("#.##0,00", { reverse: true });

            const form = document.querySelector('form');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });
        });
    </script>
}
