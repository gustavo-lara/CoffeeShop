@model CoffeeShop.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-brown text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-box-open me-2"></i>Editar Produto
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Nome" class="form-control" placeholder="Nome do Produto" />
                                    <label asp-for="Nome">
                                        <i class="fas fa-tag text-muted me-1"></i> Nome do Produto
                                    </label>
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Descricao" class="form-control" placeholder="Descrição" />
                                    <label asp-for="Descricao">
                                        <i class="fas fa-info-circle text-muted me-1"></i> Descrição
                                    </label>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Preco" class="form-control" placeholder="Preço" />
                                    <label asp-for="Preco">
                                        <i class="fas fa-dollar-sign text-muted me-1"></i> Preço
                                    </label>
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="QuantidadeEstoque" class="form-control" placeholder="Quantidade em Estoque" />
                                    <label asp-for="QuantidadeEstoque">
                                        <i class="fas fa-boxes text-muted me-1"></i> Quantidade em Estoque
                                    </label>
                                    <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId">
                                    </select>
                                    <label asp-for="FornecedorId">
                                        <i class="fas fa-truck text-muted me-1"></i> Fornecedor
                                    </label>
                                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Salvar Alterações
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-brown {
        background-color: #6F4E37;
    }

    .btn-primary {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

        .btn-primary:hover {
            background-color: #5D4037;
            border-color: #5D4037;
        }

    .form-floating > label {
        padding-left: 1.75rem;
    }

    .form-check-input:checked {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

    .form-control:focus {
        border-color: #6F4E37;
        box-shadow: 0 0 0 0.25rem rgba(111, 78, 55, 0.25);
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}
