@model CoffeeShop.Models.Cliente
@{
    ViewData["Title"] = "Novo Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-brown text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user-plus me-2"></i>Novo Cliente
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Nome" class="form-control" placeholder="Nome" required />
                                    <label asp-for="Nome">
                                        <i class="fas fa-user text-muted me-1"></i> Nome
                                    </label>
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                    <div class="valid-feedback">Perfeito!</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CPF" class="form-control" placeholder="CPF" required />
                                    <label asp-for="CPF">
                                        <i class="fas fa-id-card text-muted me-1"></i> CPF
                                    </label>
                                    <span asp-validation-for="CPF" class="text-danger"></span>
                                    <div class="valid-feedback">CPF válido!</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Email" required type="email" />
                                    <label asp-for="Email">
                                        <i class="fas fa-envelope text-muted me-1"></i> Email
                                    </label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <div class="valid-feedback">Email válido!</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Telefone" class="form-control" placeholder="Telefone" required />
                                    <label asp-for="Telefone">
                                        <i class="fas fa-phone text-muted me-1"></i> Telefone
                                    </label>
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                    <div class="valid-feedback">Telefone válido!</div>
                                </div>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="Ativo" checked />
                            <label class="form-check-label" asp-for="Ativo">
                                Cliente Ativo
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Cadastrar Cliente
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-brown {
        background-color: #6F4E37;
    }

    .btn-primary {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

        .btn-primary:hover {
            background-color: #5D4037;
            border-color: #5D4037;
        }

    .form-floating > label {
        padding-left: 1.75rem;
    }

    .form-check-input:checked {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

    .form-control:focus {
        border-color: #6F4E37;
        box-shadow: 0 0 0 0.25rem rgba(111, 78, 55, 0.25);
    }

    /* Animação para feedback de validação */
    .valid-feedback, .invalid-feedback {
        opacity: 0;
        transition: opacity 0.2s ease-in-out;
    }

    .was-validated .form-control:valid ~ .valid-feedback,
    .was-validated .form-control:invalid ~ .invalid-feedback {
        opacity: 1;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <script>
        // Máscaras para CPF e telefone
        $(document).ready(function () {
            $("#Telefone").mask("(00) 00000-0000");
            $("#CPF").mask("000.000.000-00");

            // Validação customizada do formulário
            const form = document.querySelector('form');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });
        });
    </script>
}