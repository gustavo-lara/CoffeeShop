@model IEnumerable<CoffeeShop.Models.Fornecedor>
@{
    ViewData["Title"] = "Fornecedores";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-brown">
            <i class="fas fa-truck me-2"></i>Fornecedores
        </h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-plus-circle"></i> Novo Fornecedor
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-building text-primary me-2"></i>
                                @item.Nome
                            </h5>
                            <div class="supplier-badge">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                        </div>

                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-id-card text-muted me-2"></i>
                                <span class="text-muted">CNPJ:</span> @item.CNPJ
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-envelope text-muted me-2"></i>
                                <a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-phone text-muted me-2"></i>
                                <a href="tel:@item.Telefone" class="text-decoration-none">@item.Telefone</a>
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                @item.Endereco
                            </li>
                        </ul>

                        <div class="d-flex gap-2 mt-3">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-outline-info btn-sm flex-fill">
                                <i class="fas fa-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm flex-fill"
                               onclick="return confirm('Tem certeza que deseja deletar este fornecedor?');">
                                <i class="fas fa-trash"></i> Deletar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open text-muted mb-3" style="font-size: 3rem;"></i>
            <h3 class="text-muted">Nenhum fornecedor cadastrado</h3>
            <p class="text-muted">Clique no botão "Novo Fornecedor" para começar</p>
        </div>
    }
</div>

<style>
    .text-brown {
        color: #6F4E37;
    }

    .btn-primary {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

        .btn-primary:hover {
            background-color: #5D4037;
            border-color: #5D4037;
        }

    .text-primary {
        color: #6F4E37 !important;
    }

    .hover-card {
        transition: transform 0.2s ease-in-out;
    }

        .hover-card:hover {
            transform: translateY(-5px);
        }

    .list-unstyled li {
        display: flex;
        align-items: center;
    }

        .list-unstyled li a {
            color: #6F4E37;
        }

            .list-unstyled li a:hover {
                color: #5D4037;
            }

    .supplier-badge {
        font-size: 1.2rem;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}