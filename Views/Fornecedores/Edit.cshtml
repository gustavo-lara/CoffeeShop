@model CoffeeShop.Models.Fornecedor
@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-brown text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Editar Fornecedor
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Nome" class="form-control" placeholder="Nome da Empresa" />
                                    <label asp-for="Nome">
                                        <i class="fas fa-building text-muted me-1"></i> Nome da Empresa
                                    </label>
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CNPJ" class="form-control" placeholder="CNPJ" />
                                    <label asp-for="CNPJ">
                                        <i class="fas fa-id-card text-muted me-1"></i> CNPJ
                                    </label>
                                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email">
                                        <i class="fas fa-envelope text-muted me-1"></i> Email
                                    </label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Telefone" class="form-control" placeholder="Telefone" />
                                    <label asp-for="Telefone">
                                        <i class="fas fa-phone text-muted me-1"></i> Telefone
                                    </label>
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Endereco" class="form-control" placeholder="Endereço" />
                                    <label asp-for="Endereco">
                                        <i class="fas fa-map-marker-alt text-muted me-1"></i> Endereço
                                    </label>
                                    <span asp-validation-for="Endereco" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Salvar Alterações
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-brown {
        background-color: #6F4E37;
    }

    .text-brown {
        color: #6F4E37;
    }

    .btn-primary {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

        .btn-primary:hover {
            background-color: #5D4037;
            border-color: #5D4037;
        }

    .form-control:focus {
        border-color: #6F4E37;
        box-shadow: 0 0 0 0.25rem rgba(111, 78, 55, 0.25);
    }

    .form-floating > label {
        padding-left: 1.75rem;
    }

    .card {
        border: none;
        border-radius: 1rem;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.125);
        border-top-left-radius: 1rem !important;
        border-top-right-radius: 1rem !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('[asp-for="CNPJ"]').mask("00.000.000/0000-00");
            $('[asp-for="Telefone"]').mask("(00) 00000-0000");
        });
    </script>
}
